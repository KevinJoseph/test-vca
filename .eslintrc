{
  "env": {
    "es2017": true,
    "browser": false,
    "node": true
  },
  "ignorePatterns": [
    "./build",
    "/node_modules"
  ],
  "extends": [
    "airbnb-base",
    "eslint-config-prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
  },
  "overrides": [
    {
      "files": ["src/**/*.ts"],
      "rules": {
        "no-use-before-define": "off",
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "no-unused-vars": "off",
        "semi": "off",
        "no-console": "off",
        "class-methods-use-this": "off",
        "brace-style": "off",
        "indent": "off"
      }
    },
    {
      "files": ["test/**/*.spec.ts"],
      "rules": {
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "no-undef": "off"
      }
    }
  ]
}
